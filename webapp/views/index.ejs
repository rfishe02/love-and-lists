<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <title><%= title %></title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />

    <style>
      html {
        height: 100%;
      }
      body {
        height: 100%;
        background-color: #ffcbe4;
      }
      span:hover {
        cursor: pointer;
      }
      
      
    </style>

  </head>
  <body onload="loadTasks()">

    <!--<h1><%= title %></h1>
    <p>Welcome to <%= title %></p>-->

    <div class="container text-center pt-3 rounded shadow" style="height: 100%; background-color: white;">

      <div class="row justify-content-center">
        <div class="col-12 col-md-3 mb-3">
          <form id="newTaskForm">
            <div class="mb-3">
              <label for="newTaskInput" class="form-label">To-Do</label>
              <input type="text" class="form-control" id="newTaskInput" aria-describedby="newTaskHelp">
              <div id="newTaskHelp" class="form-text"></div>
            </div>
            <div style="text-align: left;">
              <button type="submit" class="btn btn-sm btn-primary shadow-sm">Add</button>
            </div>
          </form>
        </div>
      </div>

      <hr>

      <div class="row justify-content-center">

        <div class="col-12 col-md-3">
          <ul id="taskList" class="list-group list-group-flush">
            <!--<li class="list-group-item">An item</li>
            <li class="list-group-item">A second item</li>
            <li class="list-group-item">A third item</li>-->
          </ul>
        </div>

      </div>

    </div>

    <script>
      const form = document.getElementById('newTaskForm');
      const taskList = document.getElementById('taskList');

      function loadTasks() {
        fetch('http://localhost:3000/tasks/get?userID=1')
        .then(response => {
          if (!response.ok) {
            throw new Error('Network response was not ok');
          }
          return response.json(); // Parse the response body as JSON
        })
        .then(data => {

          for(row in data.tasks) {
            //console.log(data.tasks[row]);
            addNewTask(data.tasks[row].task_desc);
          }

        })
        .catch(error => {
          // Handle errors here
          console.error('Fetch Error:', error);
        });
      };

      function addNewTask(taskDesc) {
        const newTask = document.createElement('li');
        const numberOfTasksInList = taskList.childElementCount + 1;

        newTask.setAttribute('class','list-group-item d-flex justify-content-between align-items-center');
        newTask.innerHTML = '<input class="form-check-input me-1" type="checkbox" value="" id="taskCheckbox' +numberOfTasksInList+ '">'
        + taskDesc
        + '<span class="badge text-bg-light rounded-pill shadow-sm" style="font-size:12pt;">&times;</span>';

        taskList.append(newTask);
      }

      form.addEventListener('submit', function(event) {
        event.preventDefault();

        addNewTask(document.getElementById('newTaskInput').value );

        form.reset();
      });

      taskList.addEventListener('click', function(event){

        if (event.target.tagName === 'INPUT') {
          const listItem = event.target.closest('li');
          if (listItem){

            setTimeout(function () {
              listItem.remove();

              // Completed task.
            }, 1000);

          }
        }

        if (event.target.tagName === 'SPAN') {
          const listItem = event.target.closest('li');
          if (listItem){
            listItem.remove();

            // Deleted task.
          }
        }

      });

    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>
